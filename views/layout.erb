<html>
	<head>
		<title>Hello World</title>

	</head>
	<body>
		<header>
			<% if flash[:errors] && !flash[:errors].empty? %>
  				Sorry, there were the following problems with the form. 
  					<ul id="errors">
    					<% flash[:errors].each do |error| %>
     					 <li><%= error %></li>
   					<% end %>
  				</ul>
			<% end %>
			<h1>Bookmark Manager</h1>
			<nav>
				<a href="/links"> Add Link </a>
				<br>
				<a href="/"> Home sweet home<a/>
				<a href='/tags'> Filter By Tag </a>
				<% unless @login_page %>
					<ul>
						<a href="/login">Sign in</a>
						<a href="/user/new">Sign up</a>
					</ul>
				<% end %>
			</nav>
		</header>
		<% if current_user %>
   				 Welcome, <%= current_user.email %>
  		<% end %>
  		<%= yield %>
	</body>
	<footer>Makers Academy</footer>
</html>

